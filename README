=== KERNEL CONFIG ===
CONFIG_IP_MULTIPLE_TABLES=y
CONFIG_NF_CONNTRACK_MARK=y
CONFIG_NETFILTER_XT_CONNMARK=m
CONFIG_NETFILTER_XT_TARGET_CONNMARK=m
CONFIG_NETFILTER_XT_MATCH_STATISTIC=m
CONFIG_FIB_RULES=y

=== SET IDENTICAL METRICS ===
sudo route add 0.0.0.0 via 192.168.2.3 metric 600
sudo route add default via 192.168.2.3 metric 600
sudo route add 0.0.0.0/0 via 192.168.2.3 metric 600
sudo route add 0.0.0.0/0 gw 192.168.2.3 metric 600
sudo route del 0.0.0.0/0 gw 192.168.2.3 metric 600
sudo route add 0.0.0.0/0 gw 192.168.2.3 metric 600
sudo route del 0.0.0.0/0 gw 192.168.2.3 metric 600
sudo route add default gw 192.168.2.3 metric 600
sudo route del default gw 192.168.2.3 metric 600
sudo route del default gw 192.168.2.3 metric 600
set ipv4.route-metric 100
sudo set ipv4.route-metric 100
sudo route add default gw 192.168.2.3 metric 100
sudo route add default gw 192.168.2.3 metric 100 link table 102
sudo ip route delete default via 192.168.43.1 dev wifi0 metric 100
rm 'set ipv4.route-metric 100'
sudo ip route del default via 192.168.43.1 dev wifi0 proto dhcp metric 100
sudo ip route del default via 192.168.2.2 dev wan0 proto static metric 100
sudo ip route del default via 192.168.2.2 dev wan0 proto static metric 100
